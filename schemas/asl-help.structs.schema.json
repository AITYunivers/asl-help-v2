{
  "title": "asl-help.native-structs",
  "description": "Specifies a collection of structs reflected from a game engine's internals.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "inherits": {
      "type": "object",
      "properties": {
        "major": {
          "type": "string",
          "minLength": 1
        },
        "minor": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [ "major", "minor" ]
    },
    "structs": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "parent": {
            "type": "string",
            "minLength": 1
          },
          "fields": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "minLength": 1
                },
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "alignment": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "required": [ "type", "name" ]
            }
          }
        },
        "required": [ "name", "fields" ]
      }
    },
    "signatures": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "offset": {
            "type": "integer",
            "not": {
              "const": 0
            }
          },
          "pattern": {
            "type": "string",
            "minLength": 2
          }
        },
        "required": [ "name", "pattern" ]
      }
    }
  },
  "anyOf": [
    {
      "required": [ "inherits" ]
    },
    {
      "required": [ "structs" ]
    }
  ]
}
