<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFramework>net481</TargetFramework>

    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Memory\WinApi\Structs\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Memory\WinApi\DbgHelp.cs" />
    <Compile Remove="Memory\WinApi\HandleApi.cs" />
    <Compile Remove="Memory\WinApi\LibLoaderApi.cs" />
    <Compile Remove="Memory\WinApi\MemoryApi.cs" />
    <Compile Remove="Memory\WinApi\ProcessThreadsApi.cs" />
    <Compile Remove="Memory\WinApi\PSApi.cs" />
    <Compile Remove="Memory\WinApi\SynchApi.cs" />
    <Compile Remove="Memory\WinApi\TlHelp32.cs" />
    <Compile Remove="Memory\WinApi\WinApi.cs" />
    <Compile Remove="Memory\WinApi\Wow64ApiSet.cs" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="AslHelp" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="System" />
    <Using Include="System.Collections" />
    <Using Include="System.Collections.Generic" />
    <Using Include="System.Diagnostics" />
    <Using Include="System.IO" />
    <Using Include="System.Linq" />
    <Using Include="System.Reflection" />
    <Using Include="System.Runtime.CompilerServices" />
    <Using Include="System.Runtime.InteropServices" />
    <Using Include="System.Threading" />
    <Using Include="System.Threading.Tasks" />
    <Using Include="System.Windows.Forms" />

    <Using Include="LiveSplit.Model" />
    <Using Include="LiveSplit.UI" />

    <Using Alias="Debug" Include="AslHelp.Core.IO.Debug" />
    <Using Alias="Module" Include="AslHelp.Core.Memory.Models.Module" />
    <Using Alias="Script" Include="AslHelp.Core.LiveSplitInterop.Script" />
    <Using Alias="Signature" Include="AslHelp.Core.Memory.Signatures.Signature" />
    <Using Alias="Timer" Include="AslHelp.Core.LiveSplitInterop.Timer" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.HighPerformance" Version="8.1.0" />
    <PackageReference Include="System.Text.Json" Version="7.0.2" />

    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Windows.Forms" />

    <Reference Include="Irony" HintPath="..\..\ref\Irony.dll" />
    <Reference Include="LiveSplit.Core" HintPath="..\..\ref\LiveSplit.Core.dll" />
    <Reference Include="LiveSplit.ScriptableAutoSplit" HintPath="..\..\ref\LiveSplit.ScriptableAutoSplit.dll" />
    <Reference Include="LiveSplit.Text" HintPath="..\..\ref\LiveSplit.Text.dll" />
    <Reference Include="LiveSplit.View" HintPath="..\..\ref\LiveSplit.View.dll" />
    <Reference Include="UpdateManager" HintPath="..\..\ref\UpdateManager.dll" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\AslHelp.Native\bin\Release\x64\AslHelp.Native.dll" Link="Native.x64.dll" />
    <EmbeddedResource Include="..\AslHelp.Native\bin\Release\Win32\AslHelp.Native.dll" Link="Native.x86.dll" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Memory\WinApi\" />
  </ItemGroup>

</Project>
